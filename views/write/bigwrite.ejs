    <script>
 $(document).ready(function(){
    //저장버튼 클릭
    $(document).on('click', '#saveBtn', function () {
        saveContent();
      });
 });

    //데이터 저장
    function saveContent() {
        //값 가져오기
        var title = $("#title").val();                                      //제목
        var mainclose = $("#mainclose").is(":checked");                     //메인비공개
        var summernoteContent = $('#summernote').summernote('code');         //썸머노트(설명)
        var chkresult = checkContent(title);

        //유효성 검사가 완료되었으면
        if (chkresult) {
            $.ajax({
                url: '/write/bigwritesave',
                dataType: 'json',
                type: 'post',
                data: {
                    title: title,
                    mainclose: mainclose,
                    summernoteContent: summernoteContent
                },
                success: function (data) {
                    if (data['result'] == 'success') {
                        alert(data['tocken']);
                        location.reload();
                    }else if(data['result'] == 'fail'){
                        alert(data['tocken']);
                    }
                },
                error: function (jqXHR, textStatus, err) {
                    //show error message
                    alert('죄송합니다. 작업중 오류가 발생했습니다.' + "상태 : " + textStatus + ', error : ' + err);
                }
            });
        }
    }

    //유효성 체크 -  유효성 검사가 완료되면 true를 리턴한다.
    function checkContent(title) {

        if (title == null || title == '' || title == undefined) {
            alert('게시판 제목을 작성해주세요.');
            return false;
        }
        return true;
    }
    </script>
                 